.dropdown-menu
  display none
  overflow hidden
  position absolute
  top 0
  left 0
  z-index 9999
  width 100%

  &_opened
    display block

  &__list
    display block
    list-style-type none
    margin 0
    padding 0px 5px
    border-bottom  1px solid #fff
    background-color #4267AE
    font-size 11px

  &__item
    display block
    list-style-type none
    margin 0
    line-height 26px
    white-space nowrap
    border-top 1px solid #e9ebee
    color #fff
    cursor pointer

    &:first-of-type
      border-top  none


  &__close
    position  absolute
    top -11px
    right 0px
    cursor pointer
    font-size 16px
    transform rotate(45deg)
