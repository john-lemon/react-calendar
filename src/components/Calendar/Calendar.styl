.calendar
  width 280px
  font-size 14px
  border 1px solid #333

  &__selector
    border-bottom 1px solid #333
    background #ccc

  &__select
    position relative
    display inline-block
    width 50%
    text-align center
    padding 10px 0

      &:first-of-type
        margin-right -1px
        border-right 1px solid #333

    &__daynames
      border-bottom 1px solid #333

  &__cell
    display inline-block
    width 40px
    height 40px
    text-align center
    line-height 40px
    vertical-align middle

    &_active
        background #f0f

  &__days

    .b-calendar__cell
      cursor pointer

    &__dropdown
      left 18px
