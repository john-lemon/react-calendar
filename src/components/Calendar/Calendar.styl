.calendar
  width 280px
  font-size 14px
  border 1px solid #333
  margin 0 auto 30px
  background #e9ebee

  &__selector
    border-bottom 1px solid #365899
    background #4267AE
    color #fff
    height 40px
    line-height 40px
    font-size 20px

  &__select
    position relative
    display inline-block
    width 50%
    text-align center
    padding 10px 0

      &:first-of-type
        margin-right -1px
        border-right 1px solid #333

    &__daynames
      border-bottom 1px solid #333

  &__cell
    display inline-block
    width 40px
    height 40px
    text-align center
    line-height 40px
    vertical-align middle
    color #365899

    &_active
        background #4267AE
        color #fff

  &__days

    .b-calendar__cell
      cursor pointer

    &__dropdown
      left 18px
